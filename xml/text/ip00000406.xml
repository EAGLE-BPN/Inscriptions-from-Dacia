    <ab>
                        <lb n="1"/>
                        
                        
                            
                            Χα<supplied reason="lost">ῖρε</supplied> <lb n="2"/>Ἡδύλ<supplied reason="lost">ος</supplied> <lb n="3"/>Θασ<supplied reason="lost">ίου</supplied> <lb n="4"/><supplied reason="lost"><gap reason="lost" quantity="1" unit="character"/> <gap reason="lost" quantity="1" unit="character"/> <gap reason="lost" quantity="1" unit="character"/> <gap reason="lost" quantity="1" unit="character"/> <gap reason="lost" quantity="1" unit="character"/></supplied>.
                        
                        
