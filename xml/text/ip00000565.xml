                        <lb n="1"/>
                        
                        
                            
                            <expan><abbr>D</abbr><ex>is</ex></expan> <expan><abbr>M</abbr><ex>anibus</ex></expan> <lb n="2"/><expan><abbr>P</abbr><ex>ublio</ex></expan> <expan><abbr>Ael</abbr><ex>io</ex></expan> Diophan <lb n="3"/>to <expan><abbr>vet</abbr><ex>erano</ex></expan> <expan><abbr>coh</abbr><ex>ortis</ex></expan> <lb n="4"/>V <expan><abbr>Gal</abbr><ex>lorum</ex></expan> vixit <lb n="5"/><expan><abbr>an</abbr><ex>nis</ex></expan> LXXXVI <expan><abbr>h</abbr><ex>ic</ex></expan> <expan><abbr>s</abbr><ex>itus</ex></expan> <expan><abbr>e</abbr><ex>st</ex></expan> <lb n="6"/>Aelia Ammis <expan><abbr>fil</abbr><ex>ia</ex></expan> et Aelia Eutychia <expan><abbr>lib</abbr><ex>erta</ex></expan> heredes <lb n="7"/><expan><abbr>fecer</abbr><ex>unt</ex></expan>.
                        
                        
